{% extends 'base.html.twig' %}

{% block body %}
    <section id="login">
        <div class="container h-100 d-flex align-items-center justify-content-center">
            <div class="box-login shadow-lg bg-white rounded">
                <h2>Se connecter</h2>
                {% for label, messages in app.flashes(['success', 'danger']) %}
                    {% for message in messages %}
                        <div class="container">
                            <div class="alert alert-{{ label }}">
                                {{ message }}
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form action="{{ path('security_login') }}" method="post">
                    <div class="form-group">
                        <label for="mail">Email</label>
                        <input type="email" class="form-control" id="mail" name="mail" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <div class="form-group">
                        <input type="submit" class="btn btn-login" value="Se connecter">
                    </div>
                </form>
                <a href="{{ path('securite_forget_password') }}" class="text-decoration-none">Mot de passe oubli√© ?</a>
            </div>

        </div>
    </section>
{% endblock %}

