{{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.describing, {'attr':{'class':'form_edit_description'}}) }}
    {{ form_row(form.img)}}
    {{ form_row(form.category)}}
    <div class="row py-3">
        <div class="col-md-6">
            <h3>Images</h3>
            <div class="well" id="img_list" data-prototype="{{ form_widget(form.images.vars.prototype)|e('html_attr') }}">
                {% for row in form.images  %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="card-heading">
                                <img src="{{ asset('uploads/trick/'~row.vars.value.filename) }}" alt="your image" class="img-fluid mb-3 blah" style="max-height: 300px"/>
                            </div>
                            {{ form_row(row) }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-6">
            <h3>Videos</h3>
            <div class="well" id="video_list" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
                {% for row in form.videos %}
                <div class="card mb-3">
                    <div class="card-body">
                        {{ form_row(row) }}
                        <div class="form--help">{{ form.row.help }}</div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

<button class="btn btn-black">{{ button|default('Valider') }}</button>
{{ form_end(form) }}
